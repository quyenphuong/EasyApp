<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi tiết đơn hàng"
        android:textColor="@color/SlateGray"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_baseline_back"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Người gửi"
            android:textColor="@color/Black"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_baseline_person_pin_circle_24"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên người gửi"
            android:textColorHint="@color/SlateGray"
            android:layout_margin="5dp"
            android:inputType="textVisiblePassword"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:textColorHint="@color/SlateGray"
            android:layout_margin="5dp"
            android:inputType="textVisiblePassword"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ người gửi"
            android:textColorHint="@color/SlateGray"
            android:layout_margin="5dp"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Người nhận"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_baseline_person_pin_circle_24"/>/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên người nhận"
            android:textColorHint="@color/SlateGray"
            android:layout_margin="5dp"
            android:inputType="textVisiblePassword"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:textColorHint="@color/SlateGray"
            android:layout_margin="5dp"
            android:inputType="textVisiblePassword"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ người nhận"
            android:textColorHint="@color/SlateGray"
            android:layout_margin="5dp"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ghi chú cho tài xế"
            android:layout_margin="5dp"
            android:textColorHint="@color/SlateGray"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Loại hàng"
            android:layout_margin="5dp"
            android:textColorHint="@color/SlateGray"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tổng trọng lượng"
            android:layout_margin="5dp"
            android:textColorHint="@color/SlateGray"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiếp theo"
        android:background="@drawable/btn"
        android:layout_margin="10dp"/>


</LinearLayout>